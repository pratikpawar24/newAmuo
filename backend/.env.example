# Backend Environment Variables
# Copy this file to .env for local development

# ─── Database ────────────────────────────────────────────────────────────────
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/aumo

# For Filess.io (production):
# MONGODB_URI=mongodb://username:password@your-filess-host:port/database

# ─── JWT Secrets ─────────────────────────────────────────────────────────────
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ─── External Services ───────────────────────────────────────────────────────
# AI Service URL
AI_SERVICE_URL=http://localhost:8000

# For Hugging Face Spaces (production):
# AI_SERVICE_URL=https://your-username-aumo-ai.hf.space

# OSRM Routing Service
OSRM_URL=http://localhost:5001

# For public OSRM demo (not recommended for production):
# OSRM_URL=https://router.project-osrm.org

# ─── Email Configuration ─────────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ─── Admin Account ───────────────────────────────────────────────────────────
ADMIN_EMAIL=admin@aumo.app
ADMIN_PASSWORD=Admin123!

# ─── CORS Configuration ──────────────────────────────────────────────────────
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000

# For production (multiple origins):
# CORS_ORIGIN=https://aumo.vercel.app,https://www.aumo.app

# ─── Server Configuration ────────────────────────────────────────────────────
PORT=5000
NODE_ENV=development

# ─── AI Service Authentication ───────────────────────────────────────────────
AI_API_KEY=aumo-ai-api-key-change-in-production
